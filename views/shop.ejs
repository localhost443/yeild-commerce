<%- include('include/header')  %> 
<%- include('include/sidebar')  %> 
<% if(message.info) {%>
    <div class="text-center text-gray-700 font-bold"> <span><%- message.info%> </span></div>
<%}%>

<div class="mx-4">
    <% if (data.products.length) { %>
    <div class="md:flex ">
    <% for( let index = 0; index < data.products.length; index++ ) { %>

            <div class="w-3/4 bg-white shadow-lg sm:w-1/3 md:w-1/5 xl:w-1/6 py-4 px-2 mx-4 my-2 flex flex-col">
                <a href="#">
                    <img class="hover:grow hover:shadow-lg" src="https://images.unsplash.com/photo-1555982105-d25af4182e4e?ixlib=rb-1.2.1&amp;ixid=eyJhcHBfaWQiOjEyMDd9&amp;auto=format&amp;fit=crop&amp;w=400&amp;h=400&amp;q=80">

                    <div class="pt-3 flex items-center justify-between">
                        <div>
                            <p class="text-lg"><%= data.products[index].title%></p>
<!--                            <p class='text-sm font-thin'><%= data.products[index].description %></p>-->
                        </div>
                        <% if(data.session === true) { %>

                        <div>
                            <a href='/addcart/<%= data.products[index]._id%>'><button type='submit'>
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 fill-current text-gray-500 hover:text-black" width="24" height="24" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                        <circle cx="9" cy="19" r="2"></circle>
                                        <circle cx="17" cy="19" r="2"></circle>
                                        <path d="M3 3h2l2 12a3 3 0 0 0 3 2h7a3 3 0 0 0 3 -2l1 -7h-15.2"></path>
                                    </svg>
                                </button></a>
                            <a href='http://'><button>
                                    <svg class="h-6 w-6 fill-current text-gray-500 hover:text-black" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                        <path d="M12,4.595c-1.104-1.006-2.512-1.558-3.996-1.558c-1.578,0-3.072,0.623-4.213,1.758c-2.353,2.363-2.352,6.059,0.002,8.412 l7.332,7.332c0.17,0.299,0.498,0.492,0.875,0.492c0.322,0,0.609-0.163,0.792-0.409l7.415-7.415 c2.354-2.354,2.354-6.049-0.002-8.416c-1.137-1.131-2.631-1.754-4.209-1.754C14.513,3.037,13.104,3.589,12,4.595z M18.791,6.205 c1.563,1.571,1.564,4.025,0.002,5.588L12,18.586l-6.793-6.793C3.645,10.23,3.646,7.776,5.205,6.209 c0.76-0.756,1.754-1.172,2.799-1.172s2.035,0.416,2.789,1.17l0.5,0.5c0.391,0.391,1.023,0.391,1.414,0l0.5-0.5 C14.719,4.698,17.281,4.702,18.791,6.205z"></path>
                                    </svg>
                                </button></a>

                        </div>
                            <% } %>
                    </div>
                    <div class='flex justify-between items-baseline'>
                        <p class="pt-1 text-gray-900"><%= data.products[index].price %></p>
                        <p class='border border-blue-400 rounded px-3 '><a href="<%= data.products[index]._id %>">See Info</a></p>
                    </div>

                </a>
            </div>



    
    <% } %>


</div>



<% } else { %>
<div class="relative px-6 py-4 mb-4 text-white bg-red-500 border-0 rounded">
    <span class="inline-block mr-5 text-xl align-middle">
        <i class="fas fa-bell" />
    </span>
    <span class="inline-block mr-8 align-middle">
        <b class="capitalize">ERROR</b> NO PRODUCTS FOUND
    </span>

</div>
<% } %>







</div>


<%- include('include/footer')  %> 